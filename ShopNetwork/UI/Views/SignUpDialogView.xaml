<Window x:Class="ShopNetwork.UI.Views.SignUpDialogView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:ShopNetwork.UI.Views"
        mc:Ignorable="d"
        WindowStyle="None" SizeToContent="WidthAndHeight" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid Grid.RowSpan="3" Grid.ColumnSpan="2">
            <Border x:Name="OuterGlow"  Background="Transparent"
            BorderBrush="#FF314EB0"
            BorderThickness="2">
            </Border>
        </Grid>
        <Grid Grid.Row="0" Background="#FF314EB0" Grid.ColumnSpan="2">
            <Label HorizontalAlignment="Center" VerticalAlignment="Center" Content="Sign Up" FontSize="14" Padding="0"/>
        </Grid>
        <StackPanel Grid.Row="1" Grid.Column="0" Margin="10">
            <Label Content="Name:" Foreground="#FF314EB0" Padding="0" FontSize="16"/>
            <TextBox Name="name" Grid.Row="2" MinWidth="250" Padding="2" BorderBrush="#FF314EB0" 
                     BorderThickness="2" Margin="0 0 0 10" Foreground="#FF314EB0" FontSize="16"/>
            <Label Content="Gender:" Foreground="#FF314EB0" Padding="0" FontSize="16"/>
            <ComboBox Name="gender" ItemsSource="{Binding Genders}" Grid.Row="2" MinWidth="250" Padding="10" BorderBrush="#FF314EB0" 
                      BorderThickness="2" Margin="0 0 0 10" Foreground="#FF314EB0" FontSize="16"/>
            <Label Content="Phone:" Foreground="#FF314EB0" Padding="0" FontSize="16"/>
            <TextBox Name="phone" Grid.Row="2" MinWidth="250" Padding="2" BorderBrush="#FF314EB0" 
                      BorderThickness="2" Margin="0 0 0 10" Foreground="#FF314EB0" FontSize="16"/>
            <Label Content="Date of birth:" Foreground="#FF314EB0" Padding="0" FontSize="16"/>
            <DatePicker Name="birth" Grid.Row="2" MinWidth="250" Padding="2" Height="40" BorderBrush="#FF314EB0" 
                      BorderThickness="2" Margin="0 0 0 10" Foreground="#FF314EB0" FontSize="16"/>
            <Label Content="Your password:" Foreground="#FF314EB0" Padding="0" FontSize="16"/>
            <PasswordBox Name="password" Grid.Row="2" MinWidth="250" Padding="2" BorderBrush="#FF314EB0" 
                      BorderThickness="2" Margin="0 0 0 10" Foreground="#FF314EB0" FontSize="16"/>
        </StackPanel>
        <StackPanel Grid.Row="1" Grid.Column="1" Margin="10">
            <Label Content="Last name:" Foreground="#FF314EB0" Padding="0" FontSize="16"/>
            <TextBox Name="lastName" Grid.Row="2" MinWidth="250" Padding="2" BorderBrush="#FF314EB0" 
                     BorderThickness="2" Margin="0 0 0 10" Foreground="#FF314EB0" FontSize="16"/>
            <Label Content="City:" Foreground="#FF314EB0" Padding="0" FontSize="16"/>
            <TextBox Name="city" Grid.Row="2" MinWidth="250" Padding="2" BorderBrush="#FF314EB0" 
                      BorderThickness="2" Margin="0 0 0 10" Foreground="#FF314EB0" FontSize="16"/>
            <Label Content="E-mail:" Foreground="#FF314EB0" Padding="0" FontSize="16"/>
            <TextBox Name="email" Grid.Row="2" MinWidth="250" Padding="2" BorderBrush="#FF314EB0" 
                      BorderThickness="2" Margin="0 0 0 10" Foreground="#FF314EB0" FontSize="16"/>
            <Label Content="Nickname:" Foreground="#FF314EB0" Padding="0" FontSize="16"/>
            <TextBox Name="nick" Grid.Row="2" MinWidth="250" Padding="2" BorderBrush="#FF314EB0" 
                      BorderThickness="2" Margin="0 0 0 10" Foreground="#FF314EB0" FontSize="16"/>
            <Label Content="Write password again:" Foreground="#FF314EB0" Padding="0" FontSize="16"/>
            <PasswordBox Name="password2" Grid.Row="2" MinWidth="250" Padding="2" BorderBrush="#FF314EB0" 
                      BorderThickness="2" Margin="0 0 0 10" Foreground="#FF314EB0" FontSize="16"/>
        </StackPanel>
        <Grid Grid.Row="2" Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" Margin="40 10" Command="{Binding SignUpConfirmCommand}">
                <Button.Template>
                    <ControlTemplate>
                        <Border CornerRadius="10" Background="#FFF4F3C3" BorderBrush="{x:Null}">
                            <TextBlock Text="Sign Up" Foreground="#FF314EB0" 
                                           HorizontalAlignment="Center"                                           
                                           Margin="0,5,0,0"
                                           FontSize="16"></TextBlock>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
            <Button Grid.Column="1" Margin="40 10" IsCancel="True">
                <Button.Template>
                    <ControlTemplate>
                        <Border CornerRadius="10" Background="#FF314EB0" BorderBrush="{x:Null}">
                            <TextBlock Text="Cansel" Foreground="White" 
                                           HorizontalAlignment="Center"                                           
                                           Margin="0,5,0,0"
                                           FontSize="16"></TextBlock>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </Grid>
    </Grid>
</Window>
